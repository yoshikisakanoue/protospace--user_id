<div class="card">
  <%= link_to root_path do %>
    <%= image_tag(prototype.image.variant(resize: '500x500'), class: :card__img) %>
  <% end %>
  <div class="card__body">
    <%= link_to prototype.title, root_path, class: :card__title%>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= link_to "by #{prototype.user.name}", root_path, class: :card__user if prototype.user %>
  </div>
</div>