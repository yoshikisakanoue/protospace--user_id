<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
        <%= "こんにちは、" %>
        <%= link_to "#{current_user.name}さん", user_path(current_user), class: :greeting__link %>
      </div>
    <% else %>

    <% end %>

    <div class="card__wrapper">
      <%# 投稿機能実装後、部分テンプレートでプロトタイプ投稿一覧を表示する %>
     <% @prototypes.each do |prototype| %>
       <div>
         <%= link_to prototype_path(prototype) do %>
           <%= image_tag prototype.image.variant(resize: '300x300'), class: "prototype-image" %>
         <% end %>
         <p><%= link_to prototype.title, prototype_path(prototype) %></p>
         <p class="card__summary"><%= prototype.catch_copy %></p>
         <p class="card__user">by <%= link_to prototype.user.name, user_path(prototype.user) %></p>
       </div>
     <% end %>
    </div>
  </div>
</main>

